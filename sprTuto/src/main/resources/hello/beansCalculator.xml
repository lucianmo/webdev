<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- When you declare a bean it calls the zero-argument constructor when the object is instantiated.
	     You use <propertyâ€¦/> tags to specific what setter methods are called after the constructor runs.-->
	     	
	<bean id="calculator" class="com.work.junit.mockito.andSpring.Calculator">
		<property name="rectangle" ref="rectangle" />
	</bean>
		
	<bean id="rectangle" class="com.work.junit.mockito.andSpring.Rectangle">
		<property name="length" value="10" />
		<property name="breadth" value="2" />		
	</bean>	
</beans>